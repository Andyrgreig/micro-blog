extends layout

block content
  
  form(action="/create-blog" method="POST")
    h2 Create New Post
    label Title 
    input(name="blogTitle" placeholder="title" type="text" value=blogTitle)
    label Entry
    textarea(name='blogText' placeholder="text") #{blogText}
    label Tags
    input(name="tags" placeholder="tags" type="text" value=tags)
    div(class="button-container")
      input(class="button" type='submit',value='Submit')

    if errors
      p Errors - Please try again.
      ul
        for error in errors
          li!= error.msg  



  

